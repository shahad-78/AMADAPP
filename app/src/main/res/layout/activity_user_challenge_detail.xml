<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Challenge Image -->
    <ImageView
        android:id="@+id/ivChallengeDetailImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/activity"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Content Container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="24dp"
        android:layout_marginTop="-24dp"
        app:layout_constraintTop_toBottomOf="@id/ivChallengeDetailImage"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvChallengeDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- Points Badge -->
            <TextView
                android:id="@+id/tvChallengePoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Pts"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_green"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <!-- Status & Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvChallengeStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status: Joined"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvChallengeProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress: 0%"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbChallengeProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="0"
                android:progressTint="@color/green"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge Description"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvChallengeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading description..."
                android:textSize="16sp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp"/>

            <!-- Upload Proof Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Proof"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="32dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload a photo to verify your completion of this challenge."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btnUploadProof"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Upload Proof Photo"
                android:backgroundTint="@color/green"
                android:layout_marginTop="16dp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@drawable/circle_background_white"
        android:elevation="6dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>