<?xml version="1.0" encoding="utf-8"?>
<!--
  This is the new layout for your PlantTreesFragment.
  It includes a MapView and an action card at the bottom.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The MapView will fill the entire screen -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- A simple title bar at the top -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/titleCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/plant_trees_title"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>

    <!-- This card floats at the bottom with the action buttons -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/actionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plant_trees_header"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/plant_trees_desc"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <!-- Button 1: Report Area (Primary Action) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reportAreaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_degraded_area"
                android:backgroundTint="@color/green"
                app:icon="@drawable/ic_report_area"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/white"/>

            <!-- Button 2: Find Trees (Secondary Action) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/findTreesButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/find_tree_recommendations"
                android:textColor="@color/green"
                app:icon="@drawable/ic_find_tree"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/green"
                app:strokeColor="@color/green"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>