<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Report Image -->
        <ImageView
            android:id="@+id/ivReportImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_report_area"
            android:scaleType="centerCrop"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-10-25"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvReportDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Description..."
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvReportStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_rounded_border"
                android:textColor="#FF9800"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>